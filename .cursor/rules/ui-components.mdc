# UI Components Rules for CSI NMAMIT

# Radix UI components
pattern: src/components/ui/**/*.tsx
enforce:
  useRadixComponents: true
  useAccessibility: true
  useKeyboardNavigation: true
  useScreenReaderSupport: true

# Custom components
pattern: src/components/**/*.tsx
enforce:
  useTypeScript: true
  usePropsInterface: true
  useDefaultProps: true
  useErrorBoundaries: true

# Component naming
pattern: src/components/**/*.tsx
enforceNaming: PascalCase
requireDocstring: true
maxLines: 300

# Styling patterns
pattern: **/*.tsx
enforce:
  useTailwindCSS: true
  useCSSModules: false
  useStyledComponents: false
  useResponsiveDesign: true

# Form components
pattern: src/components/**/*.tsx
enforce:
  useReactHookForm: true
  useZodValidation: true
  useFormAccessibility: true
  useErrorHandling: true

# Layout components
pattern: src/components/layout/**/*.tsx
enforce:
  useSemanticHTML: true
  useAccessibility: true
  useResponsiveDesign: true
  useSEO: true

# Animation components
pattern: src/components/**/*.tsx
enforce:
  useReactAwesomeReveal: true
  usePerformanceOptimization: true
  useReducedMotion: true

# Image components
pattern: src/components/**/*.tsx
enforce:
  useNextImage: true
  useOptimization: true
  useAltText: true
  useLazyLoading: true
description:
globs:
alwaysApply: false
---
