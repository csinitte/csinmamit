# TypeScript Development Rules for CSI NMAMIT

# TypeScript strict mode enforcement
pattern: **/*.ts
enforce:
  strictNullChecks: true
  noImplicitAny: true
  noUnusedLocals: true
  noUnusedParameters: true

# Type definitions
pattern: **/*.d.ts
requireDocstring: true
enforceNaming: PascalCase

# Interface and type definitions
pattern: **/*.ts
forbid: ["any", "Object", "Function"]
requireDocstring: true

# React component types
pattern: src/components/**/*.tsx
enforce:
  componentNaming: PascalCase
  propTypes: false
  defaultProps: true

# API type safety
pattern: src/server/api/**/*.ts
enforce:
  inputValidation: true
  outputValidation: true
  errorHandling: true

# Database types
pattern: src/server/db.ts
policy: readonly

# tRPC type safety
pattern: src/utils/api.ts
policy: readonly

# Environment types
pattern: src/env.js
policy: readonly
description:
globs:
alwaysApply: false
---
